<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="24dp">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apk"
        android:fontFamily="@font/poppins_bold"
        android:textSize="26dp"
        android:textAlignment="center"
        android:padding="14dp"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/proses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_proses"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/judul"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp"/>

    <TextView
        android:id="@+id/hasil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_hasil"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/proses"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#8c03fc"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/hasil"
        tools:ignore="MissingConstraints"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="7"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h3"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintStart_toStartOf="@id/v0"
            app:layout_constraintTop_toTopOf="@id/h0"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="8"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h3"
            app:layout_constraintEnd_toEndOf="@id/v2"
            app:layout_constraintStart_toStartOf="@id/v1"
            app:layout_constraintTop_toTopOf="@id/h0"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="9"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h3"
            app:layout_constraintEnd_toEndOf="@id/v3"
            app:layout_constraintStart_toStartOf="@id/v2"
            app:layout_constraintTop_toTopOf="@id/h0"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="+"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h3"
            app:layout_constraintEnd_toEndOf="@id/v4"
            app:layout_constraintStart_toStartOf="@id/v3"
            app:layout_constraintTop_toTopOf="@id/h0"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="-"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h2"
            app:layout_constraintEnd_toEndOf="@id/v4"
            app:layout_constraintStart_toStartOf="@id/v3"
            app:layout_constraintTop_toTopOf="@id/h3"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBagi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="/"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h1"
            app:layout_constraintEnd_toEndOf="@id/v4"
            app:layout_constraintStart_toStartOf="@id/v3"
            app:layout_constraintTop_toTopOf="@id/h2"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonKali"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="x"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h4"
            app:layout_constraintEnd_toEndOf="@id/v4"
            app:layout_constraintStart_toStartOf="@id/v3"
            app:layout_constraintTop_toTopOf="@id/h1"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonHasil"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="0"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h4"
            app:layout_constraintEnd_toEndOf="@id/v3"
            app:layout_constraintStart_toStartOf="@id/v2"
            app:layout_constraintTop_toTopOf="@id/h1"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:text="="
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h4"
            app:layout_constraintEnd_toEndOf="@id/v2"
            app:layout_constraintStart_toStartOf="@id/v0"
            app:layout_constraintTop_toTopOf="@id/h1"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:text="3"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h1"
            app:layout_constraintEnd_toEndOf="@id/v3"
            app:layout_constraintStart_toStartOf="@id/v2"
            app:layout_constraintTop_toTopOf="@id/h2"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:text="2"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h1"
            app:layout_constraintEnd_toEndOf="@id/v2"
            app:layout_constraintStart_toStartOf="@id/v1"
            app:layout_constraintTop_toTopOf="@id/h2"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:text="1"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h1"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintStart_toStartOf="@id/v0"
            app:layout_constraintTop_toTopOf="@id/h2"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:text="4"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h2"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintStart_toStartOf="@id/v0"
            app:layout_constraintTop_toTopOf="@id/h3"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:text="5"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h2"
            app:layout_constraintEnd_toEndOf="@id/v2"
            app:layout_constraintStart_toStartOf="@id/v1"
            app:layout_constraintTop_toTopOf="@id/h3"
            android:background="@drawable/custom_button"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:text="6"
            android:textSize="27sp"
            android:fontFamily="@font/poppin_medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/h2"
            app:layout_constraintEnd_toEndOf="@id/v3"
            app:layout_constraintStart_toStartOf="@id/v2"
            app:layout_constraintTop_toTopOf="@id/h3"
            android:background="@drawable/custom_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

